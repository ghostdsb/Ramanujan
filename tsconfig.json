{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "rootDir": "src"
    },
    "compileOnSave": true,
    "buildOnSave": false,
    "exclude": [
      "node_modules"
    ],
    "include": [
        "./src/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
